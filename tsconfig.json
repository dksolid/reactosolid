{
  "include": [
    "env.ts",
    "paths.ts",
    "eslint.config.mjs",
    ".stylelintrc.js",
    "src",
    "_esbuild",
    "_webpack",
    "generator"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "lib": [
      "DOM",
      "ESNext"
    ],
    "jsx": "preserve",
    "outDir": "build",
    "target": "es2019",
    "module": "esnext",
    "ignoreDeprecations": "5.0",
    "noEmit": true,
    "strict": true,
    "allowJs": true,
    "baseUrl": ".",
    "checkJs": false,
    "sourceMap": false,
    "skipLibCheck": true,
    "declaration": false,
    "noImplicitAny": false,
    "declarationMap": false,
    "isolatedModules": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "*": [
        "*",
        "src/*"
      ]
    },
    "jsxImportSource": "solid-js"
  }
}